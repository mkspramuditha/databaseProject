{% extends 'baseBackend.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}

    <div class="content-wrapper">
    <div class="page-title">
        <div>
            <h1><i class="fa fa-dashboard"></i> Overview</h1>
            {#<p>Start a beautiful journey here</p>#}
        </div>
        <div>
            <ul class="breadcrumb">
                <li><i class="fa fa-home fa-lg"></i></li>
                <li><a href="{{ url('adminDashboard') }}">Overview</a></li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-3">
                    <div class="widget-small primary coloured-icon"><i class="icon fa fa-calendar fa-3x"></i>
                        <div class="info">
                            <h4>Entries This Week</h4>
                            <p><b>324</b></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="widget-small info coloured-icon"><i class="icon fa fa-area-chart fa-3x"></i>
                        <div class="info">
                            <h4>Total Entries</h4>
                            <p><b>{{ totalEntries }}2</b></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="widget-small warning coloured-icon"><i class="icon fa fa-user fa-3x"></i>
                        <div class="info">
                            <h4>Users</h4>
                            <p><b>{{ userCount }}</b></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="widget-small danger coloured-icon"><i class="icon fa fa-warning fa-3x"></i>
                        <div class="info">
                            <h4>Confirmed Diseases</h4>

                            <p><b>38</b></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">

                        <h3 class="card-title">Recent Epidemic Entries</h3>
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Date</th>
                                <th>Submitted By</th>
                                <th>Symptoms</th>
                                <th>Description</th>
                                <th>Location</th>

                            </tr>
                            </thead>
                            <tbody>
                            {% for data in recentData %}

                                <tr>
                                    <td>{{ data.getLocationcode }}</td>
                                    {#<td>{{ data.getUserObj.getFirstname }} {{ data.getUserObj.getMiddlename }}</td>#}
                                    <td>{{ data.getUserid }}</td>
                                    <td>{{ data.getSymptoms }}</td>
                                    <td>{{ data.getDescription }}</td>
                                    <td>{{ data.getLocationcode }}</td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}